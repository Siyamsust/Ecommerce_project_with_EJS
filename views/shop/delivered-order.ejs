<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/orders.css">
    
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if (deliveredOrders.length <= 0) { %>
                <h1>No delivere dOrder!</h1>
            <% } else { %>
                <ul class="orders">
                    <% deliveredOrders.forEach(deliveredOrder => { %>
                        <li class="orders__item">
                            <h1>Order ID: <%= deliveredOrder.orderId %></h1>
                            <h3>Items you delivered :</h3>
                            <ul class="orders__products">
                                <% deliveredOrder.products.forEach(product => { %>
                                    <li class="orders__products-item">
                                        <span class="status-button status-<%= deliveredOrder.status %>">
                                            <%= deliveredOrder.status %>
                                        </span>
                                        <%= product.title %>
                                        <br>
                                        Quantity: <%= product.quantity %>
                                    </li>
                                <% }); %>
                            </ul>
                        </li>
                    <% }); %>
                </ul>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %> 