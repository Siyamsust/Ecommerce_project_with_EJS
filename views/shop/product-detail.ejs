    <body>
        <%- include('../includes/navigation.ejs') %>
        <main class="centered">
            <h1><%= product.title %></h1>
            <hr>
            <div class="image">
                <img src="/<%= product.imageUrl %>" alt="<%= product.title %>">
            </div>
            <h2>à§³<%= new Intl.NumberFormat('en-US').format(product.price) %></h2>
            <p><%= product.description %></p>
            <% if (addedtoCart && addedtoCart.toString() === product._id.toString()) { %>
                <div class="my-wn user-message--addedtoCart">Added to Cart</div>
              <% } %>
            <% if (isAuthenticated) { %>
                <%- include('../includes/add-to-cart.ejs', {product: product}) %>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>