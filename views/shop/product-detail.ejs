<%- include('../includes/head.ejs') %>
<style>
    body {
        font-family: Arial, sans-serif;
        background: linear-gradient(to bottom, #e0f0ff, #b0d4f1);
        margin: 0;
        padding: 0;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .centered {
        background: linear-gradient(center, #99bcdc, #b0d4f1);
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        display: flex;
        border:#99bcdc;
        border: 1px solid #3f3f3f;
        width: 90%;
        max-width: 1000px;
        overflow: hidden;
    }
    .image {
        flex: 1;
        padding: 20px;
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .image img {
        max-width: 100%;
        max-height: 400px;
        border-radius: 8px;
        object-fit: contain;
    }
    .product-details {
        flex: 1;
        padding: 40px;
    }
    .product-details h1 {
        font-size: 32px;
        margin-bottom: 20px;
    }
    .product-details h2 {
        font-size: 28px;
        color: #555;
        margin-bottom: 20px;
    }
    .product-details p {
        font-size: 18px;
        margin-bottom: 20px;
    }
    .floating-message {
        background-color: #e0ffe0;
        padding: 10px;
        border-radius: 5px;
        margin-bottom: 20px;
        color: green;
    }
</style>
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main class="centered">
        <div class="image">
            <img src="/<%= product.imageUrl %>" alt="<%= product.title %>">
        </div>
        <div class="product-details">
            <h1><%= product.title %></h1>
            <h2>à§³<%= new Intl.NumberFormat('en-US').format(product.price) %></h2>
            <p><%= product.description %></p>
            <% if (addedtoCart && addedtoCart.toString() === product._id.toString()) { %>
                <div class="floating-message user-message--addedtoCart">Added to Cart</div>
            <% } %>
            <% if (isAuthenticated) { %>
                <%- include('../includes/add-to-cart.ejs', {product: product}) %>
            <% } %>
        </div>
    </main>
    <%- include('../includes/end.ejs') %>
</body>